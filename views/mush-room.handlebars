
<div class="container text-center mt-3">
  <h1>Mush-room!</h1>
</div>

<div class="container d-flex flex-column align-items-center">


  <div class="container d-flex m-3 flex-wrap justify-content-center">


    {{#each mushrooms as |mushroom|}}
    <a class="m-3 col-12 col-sm-6 col-md-4 col-lg-3" href="/mush-room/{{mushroom.id}}">
      <img
        src="https://images.unsplash.com/photo-1604857864317-b3f0bff0b9a0?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=700&q=80"
        class="img-thumbnail img-fluid" alt="mushroom">
    </a>
    {{/each}}
  </div> 

  <div class="  d-flex container justify-content-center">
      <div  id="map"></div>
  </div>   

</div>


<form class="container" action="">
<div class="form-group">
<label for="mushroom-name">Mushroom Name</label>
    <input id="mushroom-name" type="text" class="form-control" id="mushroom-name" placeholder="Mushroom Name">
</div>
<div class="form-group">
<label  for="description">Description</label>
    <input id="description" type="text" class="form-control" id="description" placeholder="Description">
</div>
<button id="submit-button" class="btn btn-primary">Submit</button>
</form>

  <div class="input-group">
    <button type="button" class="btn btn-light" onClick="getEXIF()">Upload</button>
    <input type="file" class="form-control" id="pickUpFile">
  </div>



